{% extends 'base.html.twig' %}

{% block body %}
<div class="min-h-screen bg-terracota-50 py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h1 class="text-3xl font-bold text-terracota-800 mb-8">Espace membre</h1>

        <div class="flex flex-col md:flex-row gap-8">
            <!-- Menu latéral -->
            <div class="w-full md:w-64">
                {% include 'account/_menu.html.twig' %}
            </div>

            <!-- Contenu principal -->
            <div class="flex-1">
                <div class="bg-white rounded-lg shadow-sm p-6">
                    <h2 class="text-xl font-semibold text-terracota-700 mb-6">Gestion des adresses</h2>

                    {{ form_start(addressForm, {'attr': {'class': 'space-y-6'}}) }}
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <!-- Prénom -->
                        <div>
                            {{ form_label(addressForm.firstname, 'Prénom', {
                            'label_attr': {'class': 'block text-sm font-medium text-terracota-700 mb-1'}
                            }) }}
                            {{ form_widget(addressForm.firstname, {
                            'attr': {
                            'class': 'mt-1 block w-full rounded-md border-terracota-200 shadow-sm
                            focus:border-terracota-500 focus:ring-terracota-500'
                            }
                            }) }}
                            {{ form_errors(addressForm.firstname) }}
                        </div>

                        <!-- Nom -->
                        <div>
                            {{ form_label(addressForm.lastname, 'Nom', {
                            'label_attr': {'class': 'block text-sm font-medium text-terracota-700 mb-1'}
                            }) }}
                            {{ form_widget(addressForm.lastname, {
                            'attr': {
                            'class': 'mt-1 block w-full rounded-md border-terracota-200 shadow-sm
                            focus:border-terracota-500 focus:ring-terracota-500'
                            }
                            }) }}
                            {{ form_errors(addressForm.lastname) }}
                        </div>

                        <!-- Adresse -->
                        <div class="md:col-span-2">
                            {{ form_label(addressForm.address, 'Adresse', {
                            'label_attr': {'class': 'block text-sm font-medium text-terracota-700 mb-1'}
                            }) }}
                            {{ form_widget(addressForm.address, {
                            'attr': {
                            'class': 'mt-1 block w-full rounded-md border-terracota-200 shadow-sm
                            focus:border-terracota-500 focus:ring-terracota-500'
                            }
                            }) }}
                            {{ form_errors(addressForm.address) }}
                        </div>

                        <!-- Code postal -->
                        <div>
                            {{ form_label(addressForm.postal, 'Code postal', {
                            'label_attr': {'class': 'block text-sm font-medium text-terracota-700 mb-1'}
                            }) }}
                            {{ form_widget(addressForm.postal, {
                            'attr': {
                            'class': 'mt-1 block w-full rounded-md border-terracota-200 shadow-sm
                            focus:border-terracota-500 focus:ring-terracota-500'
                            }
                            }) }}
                            {{ form_errors(addressForm.postal) }}
                        </div>

                        <!-- Ville -->
                        <div>
                            {{ form_label(addressForm.city, 'Ville', {
                            'label_attr': {'class': 'block text-sm font-medium text-terracota-700 mb-1'}
                            }) }}
                            {{ form_widget(addressForm.city, {
                            'attr': {
                            'class': 'mt-1 block w-full rounded-md border-terracota-200 shadow-sm
                            focus:border-terracota-500 focus:ring-terracota-500'
                            }
                            }) }}
                            {{ form_errors(addressForm.city) }}
                        </div>

                        <!-- Pays -->
                        <div>
                            {{ form_label(addressForm.country, 'Pays', {
                            'label_attr': {'class': 'block text-sm font-medium text-terracota-700 mb-1'}
                            }) }}
                            {{ form_widget(addressForm.country, {
                            'attr': {
                            'class': 'mt-1 block w-full rounded-md border-terracota-200 shadow-sm
                            focus:border-terracota-500 focus:ring-terracota-500'
                            }
                            }) }}
                            {{ form_errors(addressForm.country) }}
                        </div>

                        <!-- Téléphone -->
                        <div>
                            {{ form_label(addressForm.phone, 'Téléphone', {
                            'label_attr': {'class': 'block text-sm font-medium text-terracota-700 mb-1'}
                            }) }}
                            {{ form_widget(addressForm.phone, {
                            'attr': {
                            'class': 'mt-1 block w-full rounded-md border-terracota-200 shadow-sm
                            focus:border-terracota-500 focus:ring-terracota-500'
                            }
                            }) }}
                            {{ form_errors(addressForm.phone) }}
                        </div>
                    </div>

                    <!-- Bouton de soumission -->
                    <div class="mt-6">
                        <button type="submit"
                            class="w-full md:w-auto flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-terracota-600 hover:bg-terracota-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-terracota-500 transition-colors">
                            Enregistrer l'adresse
                        </button>
                    </div>

                    {{ form_end(addressForm) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
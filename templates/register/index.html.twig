{% extends 'base.html.twig' %}

{% block body %}
<div class="min-h-screen bg-terracota-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md mx-auto bg-white rounded-xl shadow-md overflow-hidden p-8">
        <div class="text-center mb-8">
            <h1 class="text-3xl font-bold text-terracota-800">Créer un compte</h1>
            <p class="mt-2 text-sm text-terracota-600">
                Rejoignez notre communauté d'artisans passionnés
            </p>
        </div>

        {{ form_start(registerForm, {'attr': {'class': 'space-y-6'}}) }}

        <div class="space-y-4">
            {# Champ Email #}
            <div>
                {{ form_label(registerForm.email, 'Email', {
                'label_attr': {'class': 'block text-sm font-medium text-terracota-700'}
                }) }}
                {{ form_widget(registerForm.email, {
                'attr': {
                'class': 'mt-1 block w-full rounded-md border-terracota-200 shadow-sm focus:border-terracota-500
                focus:ring-terracota-500'
                }
                }) }}
                {{ form_errors(registerForm.email) }}
            </div>

            {# Champ Mot de passe #}
            <div>
                {{ form_label(registerForm.plainPassword.first, 'Mot de passe', {
                'label_attr': {'class': 'block text-sm font-medium text-terracota-700'}
                }) }}
                {{ form_widget(registerForm.plainPassword.first, {
                'attr': {
                'class': 'mt-1 block w-full rounded-md border-terracota-200 shadow-sm focus:border-terracota-500
                focus:ring-terracota-500'
                }
                }) }}
                {{ form_errors(registerForm.plainPassword.first) }}
            </div>

            {# Confirmation mot de passe #}
            <div>
                {{ form_label(registerForm.plainPassword.second, 'Confirmation du mot de passe', {
                'label_attr': {'class': 'block text-sm font-medium text-terracota-700'}
                }) }}
                {{ form_widget(registerForm.plainPassword.second, {
                'attr': {
                'class': 'mt-1 block w-full rounded-md border-terracota-200 shadow-sm focus:border-terracota-500
                focus:ring-terracota-500'
                }
                }) }}
                {{ form_errors(registerForm.plainPassword.second) }}
            </div>

            {# Prénom #}
            <div>
                {{ form_label(registerForm.firstname, 'Prénom', {
                'label_attr': {'class': 'block text-sm font-medium text-terracota-700'}
                }) }}
                {{ form_widget(registerForm.firstname, {
                'attr': {
                'class': 'mt-1 block w-full rounded-md border-terracota-200 shadow-sm focus:border-terracota-500
                focus:ring-terracota-500'
                }
                }) }}
                {{ form_errors(registerForm.firstname) }}
            </div>

            {# Nom #}
            <div>
                {{ form_label(registerForm.lastname, 'Nom', {
                'label_attr': {'class': 'block text-sm font-medium text-terracota-700'}
                }) }}
                {{ form_widget(registerForm.lastname, {
                'attr': {
                'class': 'mt-1 block w-full rounded-md border-terracota-200 shadow-sm focus:border-terracota-500
                focus:ring-terracota-500'
                }
                }) }}
                {{ form_errors(registerForm.lastname) }}
            </div>
        </div>

        {# Champ CSRF #}
        {{ form_widget(registerForm._token) }}

        {# Bouton Submit #}
        <button type="submit"
            class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-terracota-600 hover:bg-terracota-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-terracota-500 transition-colors">
            S'inscrire
        </button>

        {{ form_end(registerForm, {'render_rest': false}) }}

        <div class="mt-6 text-center">
            <p class="text-sm text-terracota-600">
                Déjà membre ?
                <a href="{{ path('app_login') }}" class="font-medium text-terracota-700 hover:text-terracota-600">
                    Se connecter
                </a>
            </p>
        </div>
    </div>
</div>
{% endblock %}